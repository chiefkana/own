---
export interface Props {
  href: string;
  className?: string;
  ariaLabel?: string;
  title?: string;
  disabled?: boolean;
  openNewWindow?: boolean;
}

const { href, className, ariaLabel, title, disabled = false, openNewWindow = false } = Astro.props;
---

{
  disabled ? (
    <span class={`group inline-block ${className}`} aria-label={ariaLabel} title={title} aria-disabled={disabled}>
      <slot />
    </span>
  ) : (
    <a
      {href}
      target={openNewWindow ? "_blank" : "_self"}
      class={`group inline-block hover:text-skin-accent ${className}`}
      aria-label={ariaLabel}
      title={title}
    >
      <slot />
    </a>
  )
}
